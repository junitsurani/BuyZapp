                <!-- ... -->

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Special Discount Banner -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/img_11"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>

        <!-- Featured Section -->
        <LinearLayout
            android:layout_width="match_parent"
