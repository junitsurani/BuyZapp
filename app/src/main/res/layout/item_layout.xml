                        android:src="@drawable/office"
                        app:shapeAppearanceOverlay="@style/CircularImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Office"
